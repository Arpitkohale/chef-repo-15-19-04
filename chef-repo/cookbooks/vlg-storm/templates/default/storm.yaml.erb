worker.childopts: -Dclicksense.application.home=<%= node['vlg-clicksense']['home_dir'] %> -Dspring.profiles.active=<%= node['vlg-storm']['aws_datacenter'] %>,deployment.standard.dmp -Dapplication.name=storm
