<% if node['vlg-storm']['zookeeper_quorum'] == true %>
storm.zookeeper.servers:
    - "<%= node['vlg-storm']['zookeeper']['server']['1'] %>"
    - "<%= node['vlg-storm']['zookeeper']['server']['2'] %>"
    - "<%= node['vlg-storm']['zookeeper']['server']['3'] %>"

transactional.zookeeper.servers:
    - "<%= node['vlg-storm']['zookeeper']['server']['1'] %>"
    - "<%= node['vlg-storm']['zookeeper']['server']['2'] %>"
    - "<%= node['vlg-storm']['zookeeper']['server']['3'] %>"
<% end %>

storm.local.dir: "<%= node['vlg-storm']['home_dir'] %>"

nimbus.host: "<%= node['vlg-storm']['nimbus']['server'] %>"

supervisor.slots.ports:
    - 6700

